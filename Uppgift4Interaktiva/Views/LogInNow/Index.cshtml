
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron mt-0">
    <h1>Logga in</h1>
    <p class="lead">Tv-kollen är internets bästa guide för vilka TVprogram som går!</p>
</div>
<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3 ">
            <form class="justify-content-center">
                <div class="form-group">
                    <label for="Username">Användarnamn</label><br />
                    <input class="span 12 form-control" type="text" name="userName" placeholder="Användarnamn" />
                </div>
                <div class="form-group">
                    <label for="Password1">Lösenord</label> <br />
                    <input class="span 12 form-control" type="password" name="password" placeholder="Lösenord" />
                </div>
                <button class="btn btn-dark" type="submit" value="Login" name="loginBtn">Logga in</button>
            </form>
        </div>
    </div>
</div>