@model Uppgift4Interaktiva.Models.ViewModels.ChannelLists
@{
    ViewBag.Title = "Channel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.AllShows.Select(x => x.Channel).First().ToString()</h2>

<div class="container-fluid">
    @{
        var idagDate = new DateTime(2018, 11, 11);

        for (int i = 0; i < 5; i++)

        { <div class="row">
                <div class="col-sm-12 col-md-4 ">
                    <div class="card bg-light mb-3">
                        <div class="card-body text-center table-responsive-lg">

                            <table class="table">
                                <thread>
                                    <tr>
                                        <th>Namn</th>
                                        <th>Starttid</th>
                                        <th>Datum</th>
                                    </tr>
                                </thread>
                                <tbody>

                                    @foreach (var item in Model.AllShows.Where(x => x.Start.Date == idagDate))
                                    {
                                        <tr>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Start.TimeOfDay
                                            </td>
                                            <td>
                                                @item.Start.Date
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table><br /><br />
                        </div>
                    </div>
                </div>
            </div>
            idagDate = idagDate.AddDays(1);
        }


    }


