                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <div class="modal fade" id="myModal" role="dialog" data-url='@Url.Action("Details", "TvPrograms", new { id = item.Id })'></div>
                                <button type="button" id="showinfo" class="btn btn-outline-dark">
                                    Info
                                </button>
                            </td>
                        </tr>

                    }

                </table>

            </div>
        </div>
